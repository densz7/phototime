.community
    padding-bottom 40px
    min-height 485px
    background-color #f5f6f7

    &__content
        col()
        col-3()
        col-sm-12()
        margin-top 165px
        text-align center
    
    &__title
        margin-top 30px
        font-size 1em
        font-weight bold
        text-transform uppercase

    &__text
        margin-top 25px
        font-size .75em
        letter-spacing 2px
        white-space pre-line
    
    &__slider
        col()
        col-9()
        offset-left-md(1)
        col-md-8()
        offset-left-sm(0)
        col-sm-12()
        margin-top 120px
        
    
    @media screen and (max-width $break_sm)
        &__slider
            margin 0 auto
            margin-top 90px
            max-width 370px
            text-align center
        
        &__text
            white-space normal