.subscribe
    display flex
    flex-direction(column)
    justify-content(center)
    align-items(center)
    min-height 788px
    background-image url('../images/subscribe/subscribe__bg.jpg')
    background-repeat no-repeat
    background-size cover

    &__title
        text-align center
        font-size 1.5em
        color #fff
        text-transform uppercase
    
    &__form-subscribe
        col()
        col-xs-12()
        margin-top 30px