.mobile-menu-icon
    display none
    position relative
    height 23px
    width 25px
    z-index 5
    cursor pointer

    &__lines
        position absolute
        top 9px
        display block
        width 100%
        height 3px
        background-color #fff
        border-radius 5px
        transition background 0 .35s

        &::before
        &::after
            content ''
            display block
            position absolute
            width 100%
            height 3px
            background-color #fff
            border-radius 5px
            
        
        &::before
            top -7px
            transition-property top, transform
            transition-duration 0.2s, .35s
        
        &::after
            bottom -7px
            transition-property bottom, transform
            transition-duration 0.2s, .35s
        
        &--close
            background transparent

            &::before
                top 0
                transform rotate(45deg)
            &::after
                bottom 0
                transform rotate(-45deg)
    
    @media screen and (max-width: $break_sm)
        display block